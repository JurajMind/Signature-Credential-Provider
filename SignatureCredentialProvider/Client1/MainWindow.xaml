        <signatureVerification:SignatureInkCanvas x:Name="InkCanvas" Margin="0" Background="Bisque" Height="273" />
        <StackPanel Orientation="Horizontal">
        <Button Content="Send" Grid.Column="1" Margin="0,0,0,0" VerticalAlignment="Center" Click="Button_Click"
                Height="41" Width="883" />
        </StackPanel>
    </StackPanel>
</Window>