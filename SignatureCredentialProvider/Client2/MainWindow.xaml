<Window x:Class="Client2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client 2" Height="250" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TextBox_SendMessage" HorizontalAlignment="Stretch" Height="30" />
            <Button Content="Send" Grid.Column="1" Margin="5,0,0,0" VerticalAlignment="Center" Click="Button_Click" />
        </Grid>
        <ListBox x:Name="ListBox_Messages" Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" />
        <StackPanel x:Name="StackPanel_ClientsButton" Grid.Row="2" Orientation="Horizontal" Margin="5" />
    </Grid>
</Window>